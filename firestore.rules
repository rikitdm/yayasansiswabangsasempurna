rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Lock down all collections by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for newsArticles collection
    // Allow anyone to read news articles
    match /newsArticles/{articleId} {
      allow get, list: if true;
      allow write: if false; // Only allow writes from the Firebase Console
    }
    
    // Rules for projects collection
    // Allow anyone to read projects
    match /projects/{projectId} {
      allow get, list: if true;
      allow write: if false; // Only allow writes from the Firebase Console
    }
    
    // Rules for goodsDonations collection
    match /goodsDonations/{donationId} {
      // Allow users to create a new donation request if they are signed in.
      allow create: if isAuthenticated();
      // Allow users to read their own donation requests.
      // The `userId` field in the document must match their authentication UID.
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;

      // Do not allow users to update or delete donation requests.
      allow update, delete: if false;
    }
  }
}